<section class="login">
  <header class="page-header">
    <h1>Login</h1>
  </header>

  <% flash.each do |type, msg| %>
    <div class="alert alert-danger">
      <strong><%= msg %></strong>
    </div>
  <% end %>

  <%= form_tag '/login' do %>
    <div class="form-group login-form">
      Email: <%= text_field_tag :email, '', class: 'form-control login-input' %>
      Password: <%= password_field_tag :password, '', class: 'form-control login-input' %>
      <%= submit_tag "Submit", class: 'btn btn-primary login-btn' %>
    </div>
  <% end %>
</section>